<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tt.lab.android.ieltspass"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/StyledAllIndicators" >
        <activity
            android:name="tt.lab.android.ieltspass.activity.SlidingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tt.lab.android.ieltspass.activity.VocabularyActivity"
            android:label="@string/title_activity_vocabulary_detail" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tt.lab.android.ieltspass.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tt.lab.android.ieltspass.activity.DailyActivity"
            android:label="@string/title_activity_daily" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tt.lab.android.ieltspass.activity.SettingsActivity"
            android:label="@string/title_activity_settings" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tt.lab.android.ieltspass.activity.ListeningActivity"
            android:label="@string/title_activity_listening" 
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>